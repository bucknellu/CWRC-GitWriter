{
  "name": "cwrc-git-writer",
  "version": "0.0.0",
  "description": "xml editing and rdf annotation using github as document store",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cwrc/CWRC-GitWriter.git"
  },
  "keywords": [
    "xml",
    "rdf",
    "editor",
    "annotation"
  ],
  "contributors": [
    "Andrew MacDonald",
    "James Chartrand"
  ],
  "license": "GPL-2.0",
  "bugs": {
    "url": "https://github.com/cwrc/CWRC-GitWriter/issues"
  },
  "homepage": "https://github.com/cwrc/CWRC-GitWriter#readme",
  "scripts": {
    "build": "npm run clean && npm run copyfiles && npm run build:js",
    "clean": "rimraf build",
    "cm": "git-cz",
    "copyfiles": "npm run copy:images && npm run copy:css && npm run copy:html && npm run copy:xml && npm run copy:openseadragon",
    "copy:images": "copyfiles -u 3 \"node_modules/cwrc-writer-base/src/img/**/*\" build/",
    "copy:css": "copyfiles -u 3 \"node_modules/cwrc-writer-base/src/css/**/*\" build/",
    "copy:html": "copyfiles -u 3 \"node_modules/cwrc-writer-base/src/html/*\" build/ && copyfiles -f src/html/index.html build/",
    "copy:xml": "copyfiles -u 5 \"node_modules/cwrc-writer-base/src/js/schema/*/xml/*\" build/schema/",
    "copy:openseadragon": "mkdirp build/img/osd && copyfiles -f \"node_modules/openseadragon/build/openseadragon/images/*\" build/img/osd/",
    "build:js": "mkdirp build/js && browserify src/js/app.js -o build/js/app.js --debug --verbose -g deamdify -t [ babelify --presets [ es2015 ] ]",
    "watch": "watchify src/js/app.js --debug -o build/js/app.js --verbose -g deamdify -t [ babelify --presets [ es2015 ] ]"
  },
  "dependencies": {
    "cwrc-git-dialogs": "1.1.6",
    "cwrc-public-entity-dialogs": "^1.2.2",
    "cwrc-writer-base": "^2.9.6",
    "dbpedia-entity-lookup": "^0.1.0",
    "getty-entity-lookup": "^1.3.0",
    "viaf-entity-lookup": "cwrc/viaf-entity-lookup#iss2",
    "wikidata-entity-lookup": "^1.1.0"
  },
  "devDependencies": {
    "babel-preset-es2015": "6.22.0",
    "babelify": "7.3.0",
    "browserify": "^13.0.1",
    "commitizen": "^2.9.6",
    "copyfiles": "^1.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "deamdify": "0.3.0",
    "minifier": "^0.8.0",
    "minifyify": "^7.3.3",
    "mkdirp": "^0.5.1",
    "rimraf": "^2.5.4",
    "watchify": "^3.7.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
